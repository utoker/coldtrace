{
  "extends": "../../packages/tsconfig/node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo-backend",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "references": [
    { "path": "../../packages/database" },
    { "path": "../../packages/env" },
    { "path": "../../packages/types" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}