{
  "name": "@coldtrace/simulator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:interactive": "tsx src/index.ts",
    "dev:demo": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "tsx src/test.ts",
    "test:quick": "timeout 30 tsx src/test.ts", 
    "verify": "tsx src/test.ts",
    "validate": "tsx src/validate.ts",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@apollo/client": "^4.0.3",
    "@coldtrace/database": "workspace:*",
    "@coldtrace/env": "workspace:*",
    "@coldtrace/types": "workspace:*",
    "chalk": "^5.6.0",
    "cross-fetch": "^4.1.0",
    "dotenv": "^16.6.1",
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "@coldtrace/tsconfig": "workspace:*",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "tsx": "^4.17.0",
    "typescript": "^5.7.2"
  }
}