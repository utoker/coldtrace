# ColdTrace Production Environment Template
# Copy this file to .env.production and update with your production values

# Database Configuration - Production (e.g., Supabase, AWS RDS, etc.)
# Example for Supabase:
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?schema=public&connection_limit=1&pool_timeout=0"

# Alternative database providers:
# AWS RDS: "postgresql://username:password@your-db-instance.region.rds.amazonaws.com:5432/coldtrace"
# Neon: "postgresql://username:password@ep-xxx.region.aws.neon.tech/coldtrace?sslmode=require"
# Railway: "postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway"

# Application Environment
NODE_ENV="production"

# Security
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
JWT_SECRET="your-jwt-secret-key-here"

# Application URLs - Update with your production domains
NEXT_PUBLIC_API_URL="https://api.coldtrace.com"
NEXT_PUBLIC_FRONTEND_URL="https://coldtrace.com"
NEXTAUTH_URL="https://coldtrace.com"

# API Keys and External Services
# SMTP Configuration for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Optional: Third-party integrations
# SENTRY_DSN="your-sentry-dsn"
# ANALYTICS_ID="your-analytics-id"

# Logging and Monitoring
LOG_LEVEL="info"
ENABLE_LOGGING="true"

# Performance
ENABLE_REDIS_CACHE="false"
# REDIS_URL="redis://localhost:6379" # if using Redis

# File Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-west-2"
# AWS_S3_BUCKET="coldtrace-uploads"