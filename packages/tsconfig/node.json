{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "types": ["node"],
    "allowJs": false,
    "rewriteRelativeImportExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}